doctype html
html
  head
    link(rel='shortcut icon', href='../favicon.ico')
    title= 'Agro Report'
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css")
    link(rel="stylesheet", href="../assets/css/bootstrap.min.css")
    link(rel="stylesheet", href="../assets/css/material-kit.min.css?v=1.1.0")
    link(rel="stylesheet", )
  body(class="signup-page")
    nav(class="navbar navbar-primary navbar-transparent navbar-absolute")
      div(class="container")
        div(class="navbar-header")
          button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation")
            span(class="sr-only") Toggle navigation
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          a(class="navbar-brand", href="/") Consumo Ya!
        div(class="collapse navbar-collapse")
          ul(class="nav navbar-nav navbar-right")
            li(class="button-container")
              a(href="/auth/signup", class="btn btn-rose btn-round")
                i(class="material-icons") border_color
                | Registrarse
    div(class="page-header header-filter" style="background-image: url('../assets/img/fondo3.jpg'); background-size: cover; background-position: top center;")
      div(class="container")
        div(class="row")
          div(div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3")
            div(class="card card-signup")
              form(class="form" action="/auth/signin", method="post", autocomplete="off")
                div(class="header header-primary text-center")
                  div(class="btn btn-just-icon btn-simple")
                    img(src="../assets/img/signin.png", style="width:200px")
                if verify.length > 0
                  div(class="alert alert-success")
                    div(class="alert-icon")
                      i(class="material-icons") check
                    button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                      span(aria-hidden="true")
                        i(class="material-icons") clear
                    b Perfecto: 
                    = verify
                if message.length > 0
                  div(class="alert alert-info")
                    div(class="alert-icon")
                      i(class="material-icons") info_outline
                    button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                      span(aria-hidden="true")
                        i(class="material-icons") clear
                    b Registro exitoso: 
                    = message
                if authmessage.length > 0
                  div(class="alert alert-danger")
                    div(class="alert-icon")
                      i(class="material-icons") error_outline
                    button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                      span(aria-hidden="true")
                        i(class="material-icons") clear
                    b Error:  
                    = authmessage
                div(class="card-content")
                  div(class="input-group")
                    span(class="input-group-addon")
                      i(class="material-icons") email
                    input(type='text', name='username', placeholder='Correo electrónico' class="form-control" required)
                  div(class="input-group")
                    span(class="input-group-addon")
                      i(class="material-icons") lock_outline
                    input(type='password', name='password', placeholder='Contraseña' class="form-control" required)
                  div(style="width:175px;margin-left: 20px;")
                    select(class="selectpicker", data-style="btn btn-primary btn-simple btn-wd", title="Más opciones", data-size="7" style="width:150px", onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);")
                      option(value="signup") Crear cuenta
                      option(value="Rrestore") Recuperar contraseña
                div(class="footer text-center") 
                  input(class="btn btn-primary btn-round", type="submit", value="Entrar")
                  
      footer(class="footer")
        div(class="container")
          nav(class="pull-left")
            ul
              li
                a(href="") Consumo Ya!
              li
                a(href="") Privacidad
              li
                a(href="") Condiciones
          div(class="copyright pull-right")
            &copy; 
            script document.write(new Date().getFullYear())
            |  
            i(class="fa fa-heart heart")
            |  Gobernación del Cesar
                    
    script(src="../assets/js/jquery.min.js", type="text/javascript")
    script(src="../assets/js/bootstrap.min.js", type="text/javascript")
    script(src="../assets/js/material.min.js", type="text/javascript")
    script(src="../assets/js/bootstrap-selectpicker.js" type="text/javascript")
    script(src="../assets/js/bootstrap-tagsinput.js")
    script(src="../assets/js/jasny-bootstrap.min.js")
    script(src="../assets/js/atv-img-animation.js" type="text/javascript")
    script(src="../assets/js/material-kit.min.js?v=1.1.0", type="text/javascript")
